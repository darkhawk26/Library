@model Book

<h1>Delete Book</h1>

<div>
    <h4>Are you sure you want to delete this book?</h4>
    <dl>
        <dt>Title</dt>
        <dd>@Model.Title</dd>
        <dt>Author</dt>
        <dd>@Model.Author</dd>
        <dt>Year Published</dt>
        <dd>@Model.YearPublished</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit">Delete</button>
</form>

